<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/Resources/Images/IconCrystall.png" type="image/png"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar border-bottom">
            <div class="container-horizontal">
                <a href="/">
                    <img class="icon" src="~/Resources/Images/IconCrystall.png">
                </a>
                <ul class="navbar-nav-right">

                   <li>
                       <a class="link" asp-area="" asp-controller="Login" asp-action="Index">Войти</a>
                   </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="footer-container">
            &copy; 2024 - За гранью -
            <a href="https://vk.com/beyondtheedgethegame">
                <img class="footer-icon" src="~/Resources/Images/icons8-vk-48.png" />
            </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
